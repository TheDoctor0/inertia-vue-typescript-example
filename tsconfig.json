{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "strict": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "strictNullChecks": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/js/*"],
            "~/*": ["./*"]
        }
    },
    "include": [
        "resources/js/**/*",
        "./*.js"
    ],
    "exclude": ["node_modules"],
    "files": [
        "resources/js/vue-shims.d.ts",
        "resources/js/inertia-shims.d.ts"
    ]
}
